<div class="row">
  <div class="col-md-8 col-md-push-2"><h2 class="text-center"><%= @issue.title %></h2></div>
  <div class="col-md-8 col-md-push-2 issue-description-box"><p><%= @issue.description %></p></div>
</div>
<br>
<div class="row">
  <div class="col-md-4 col-md-push-4">
    <%= link_to "支持", vote_path(@issue), :remote => true, :class => "btn btn-success w100p" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12"><h2 class="text-center">支持此議題的民代</h2></div>
  <% @issue.votes.each do |v| %>
    <% if v.user.role == 1 %>
      <div class="col-md-2"><img src=<%= v.user.fb_image %> alt=""><p>name:<%= v.user.name %></p></div>
    <% end %>
  <% end %>
</div>

<div class="row"></div>
  <div class="col-md-8 col-md-push-2"><%= link_to '回議題列表', issues_path, class: "btn btn-primary" %></div>
</div>
