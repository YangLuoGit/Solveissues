<div class="container">
  <div class="row">

    <table class="table table-striped">
      <thead>
        <tr>
          <th>議題</th>
          <th>內容</th>
          <th>人數</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @issues.each do |issue| %>

        <tr>
          <td><%= issue.title %></td>
          <td><%= issue.description %></td>
          <td><%= issue.votes.count %></td>
          <td><%= link_to 'Show', issue %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to '建立議題', new_issue_path %>
  </div>
</div>
