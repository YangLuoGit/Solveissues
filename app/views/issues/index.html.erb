<div class="container">
  <div class="row">

    <table class="table table-striped">
      <thead>
        <tr>
          <th>議題</th>
          <th>人數</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @issues.each do |issue| %>

        <tr>
          <td><%= link_to issue.title, issue %></td>
          <td><%= issue.votes.count %></td>
          <td>
          <%#= link_to '支持', issue_path(issue), :action => "checkvote", :remote => true %>
          <% if current_user %>
            <% vote = issue.find_vote_by_user(current_user) %>
            <div id="like-<%= issue.id %>">
              <%= render :partial => "votes/show", :locals => {:issue => issue, :vote => vote} %>
            </div>
          <% else %>
            <span class="thumb"><%= link_to "", :disabled => true  do%>
            <%= icon("thumbs-up") %></span>
            <% end %>
          <% end %>

          <!-- <span class="thumb"><%#= link_to like_path(:issue_id => issue.id), :id => "like-#{issue.id}" , :remote => true do%> -->
          <!-- <%#= icon("thumbs-up") %></span> -->
          <!-- <%# end %> -->


          </td>
          <!-- <td><%#= link_to '支持', :controller => "votes", :method => "POST", :issue_id => issue.id, :remote => true %></td> -->
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to '建立議題', new_issue_path, class: "btn btn-success" %>
    <br>
    <%= paginate @issues %>

  </div>
</div>
