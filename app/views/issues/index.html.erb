<div class="container">
  <div class="row">

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Creator</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @issues.each do |issue| %>
        <tr>
          <td><%= issue.title %></td>
          <td><%= issue.description %></td>
          <td><%= issue.creator %></td>
          <td><%= link_to 'Show', issue %></td>
        </tr>
        <% end %>
      </tbody>
    </table>


    <%= link_to 'New Issue', new_issue_path %>
    <%#= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-primary" do %>
  </div>
</div>
